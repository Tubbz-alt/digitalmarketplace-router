{% from "_macros.j2" import proxy_headers with context %}
{% from "_macros.j2" import prepare_trace_header_values with context %}
server {
    listen 80;
    server_name api.*;

    {{ prepare_trace_header_values() }}

    set $api_url {{ api_url }};
    location / {
        {% for dev_ip in dev_user_ips.split(",") %}
        allow {{ dev_ip }};
        {% endfor %}
        deny all;

        {{ proxy_headers() }}
        proxy_pass $api_url$request_uri;
    }

    set $api_callbacks_url {{ api_url }};
    location /callbacks {
        {{ proxy_headers() }}
        proxy_pass $api_callbacks_url$request_uri;
    }
}

